@import 'normalize.styl'
@import 'fonts.styl'

color_texto = #00DBFF
color_fondo = #1E1E1E
.u-title
	color color_texto
	border-bottom 2px dashed color_texto
	font-size 1.5em
	font-weight normal
	text-align center
	padding-bottom 0.5em
body
	font-size 16px
	background-image url('../img/pro.jpg')
	background-repeat no-repeat
	background-position center
	background-size cover
.MainMenu
	background color_fondo
	text-align center
	height 3.75em
	position fixed
	left 0
	right 0
	top 0
.MainMenu-list
	margin 0
	padding 0
	color orange
.MainMenu-item
	display inline-block
.MainMenu-link
	font-size 1em
	color white
	text-decoration none
	line-height 3.75em
	margin-right 0.5em
	margin-left 0.3em
.Header
	margin-top 3.75em
	//background-image url('../img/bg_header2.jpg')
	background-repeat no-repeat
	background-position center
	background-size cover
	text-align center
	padding 1.2em 0
.Header-image
	border .4em solid white
	border-radius 50%
.Header-name
.Header-link
	color white
.Header-link
	font-size 2.2em
	text-decoration none
	font-weight bold
.Header-name
	font-size 1.5em
	font-weight 300
	margin 0
.Header-imageContainer
	margin 0
.jugar
	z-index 0
.Footer
	background-image url('../img/cont.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
	padding 2em 0
	text-align center
.Footer-form
	text-align center
	display inline-block
.Footer-left
	display inline-block
	width 32em
	text-align center
	vertical-align top
.Footer-title
	color white
.Footer-formInput,
.Footer-textarea
	background white
	border none
	display block
	border-radius 2em
	padding .5em
	margin 0 auto 1em
.Footer-textarea
	resize none
.Footer-button
	background orange
	color white
	border-radius 1em
	margin-bottom 1em
	padding .5em 1em
	border none
@media screen and (max-width:480px)
	.MainMenu
		font-size 0.8em